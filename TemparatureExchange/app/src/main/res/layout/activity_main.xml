<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_fd"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Fahrenheit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_fd"
        android:layout_width="216dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_fd" />

    <TextView
        android:id="@+id/txt_cd"
        android:layout_width="87dp"
        android:layout_height="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="Celcius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_fd" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_cd"
        android:layout_width="216dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cd" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="Clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="269dp"
        android:layout_height="92dp"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="0sp"
        android:paddingEnd="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_cd">

        <Button
            android:id="@+id/btn_cvC"
            android:layout_width="106dp"
            android:layout_height="59dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:text="Convert To C" />

        <Button
            android:id="@+id/btn_cvF"
            android:layout_width="109dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Convert To F" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>