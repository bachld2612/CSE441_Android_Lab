<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:background="#8740D7"
        android:gravity="center_vertical|start"
        android:paddingStart="5dp"
        android:text="Bai2_vongdoi"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_banner"
        android:layout_width="277dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:text="Demo Cycle Life"
        android:textAlignment="center"
        android:textColor="#4AC54A"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="179dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6B6D6D"
        android:text="CALL DIALOG"
        android:textSize="20sp"
        app:cornerRadius="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_banner" />
</androidx.constraintlayout.widget.ConstraintLayout>